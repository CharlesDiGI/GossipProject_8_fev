
<% if flash[:danger] %>
  <div class="alert alert-dismissible alert-danger %>">
    <div class="notice"><strong><%= flash[:danger] %></strong></div>
    <div>Thanks</div>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% end %>

<h1>Please insert your email and password</h1>


<%= form_tag url_for(action: 'create'), method: "post" do %>


    <div class='form-group'>
          <%= text_field_tag 'email', '', placeholder: "email", class: "form-control" %></br></br>
    </div>

    <div class='form-group'>
          <%= password_field_tag 'password', '', placeholder: "Password", class: "form-control" %></br></br>
    </div>

    <div class='form-group'>
        <button type="submit" class="btn btn-primary">Validate</button>
    </div>

<% end %>