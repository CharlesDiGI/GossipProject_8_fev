<h1>Create new user</h1>

<% if flash[:danger] %>
  <div class="alert alert-dismissible alert-danger %>">
    <div class="notice"><strong><%= flash[:danger] %></strong></div>
    <div>Thanks</div>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% end %>



<%= form_tag url_for(action: 'create'), method: "post" do %>

    <%= text_field_tag 'email', '', placeholder: "email", class: "form-control" %></br></br>
    <%= password_field_tag 'password', '', placeholder: "Password", class: "form-control" %></br></br>
    <%= text_field_tag 'first_name', '', placeholder: "first_name", class: "form-control" %></br></br>
    <%= text_field_tag 'last_name', '', placeholder: "last_name", class: "form-control" %></br></br>
    <button type="submit" class="btn btn-primary">Validate</button>

<% end %>